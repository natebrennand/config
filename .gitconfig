[user]
    name = Nate Brennand
    email = natebrennand@gmail.com

[color]
    ui = auto

[color "branch"]
    current = yellow black
    local = yellow
    remote = magenta

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red reverse
    new = green reverse
    whitespace = white reverse

[color "status"]
    added = green
    changed = yellow
    untracked = cyan reverse
    branch = magenta

[core]
    excludesfile = ~/.global_gitignore
    page = less

[push]
    default = simple

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[core]
	hooksPath = ~/.git/hooks/
